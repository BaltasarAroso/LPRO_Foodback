<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="@dimen/_8sdp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/promotion_title_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sample_francesinhas_title"
        android:textStyle="bold"
        android:textSize="@dimen/_12sdp" />

    <TextView
        android:id="@+id/promotion_description_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sample_francesinhas_desc"
        android:textStyle="normal"
        android:textSize="@dimen/_10sdp" />

    <com.google.android.flexbox.FlexboxLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:flexDirection="row"
        app:alignItems="flex_end">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/code"
            android:textStyle="bold"
            android:layout_marginEnd="@dimen/_8sdp"
            android:layout_marginRight="@dimen/_8sdp" />

        <TextView
            android:id="@+id/promotion_code_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sample_francesinhas_promo"
            android:textStyle="normal"
            android:textSize="@dimen/_10sdp" />

    </com.google.android.flexbox.FlexboxLayout>

    <com.google.android.flexbox.FlexboxLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:flexDirection="row"
        app:alignItems="flex_end">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/limit_date"
            android:textStyle="bold"
            android:layout_marginEnd="@dimen/_8sdp"
            android:layout_marginRight="@dimen/_8sdp" />

        <TextView
            android:id="@+id/promotion_limit_date_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sample_francesinhas_expiry"
            android:textStyle="normal"
            android:textSize="@dimen/_10sdp" />

    </com.google.android.flexbox.FlexboxLayout>

</LinearLayout>
