<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.foodback.foodback.fragment.EstablishmentPage">

    <com.google.android.flexbox.FlexboxLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:flexDirection="column"
        android:layout_margin="@dimen/_8sdp">

        <com.google.android.flexbox.FlexboxLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:flexDirection="column">

            <com.google.android.flexbox.FlexboxLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                app:justifyContent="center">

                <TextView
                    android:id="@+id/estab_page_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tasca do Zé"
                    android:textStyle="bold"
                    android:textSize="@dimen/_20sdp"
                    app:layout_alignSelf="center"/>

            </com.google.android.flexbox.FlexboxLayout>

            <com.google.android.flexbox.FlexboxLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_100sdp"
                app:justifyContent="center">

                <ImageView
                    android:id="@+id/estab_page_image"
                    android:layout_width="@dimen/_200sdp"
                    android:layout_height="@dimen/_80sdp"
                    app:srcCompat="@drawable/foodback_logo"
                    app:layout_alignSelf="center"
                    android:contentDescription="Imagem do Estabelecimento" />

            </com.google.android.flexbox.FlexboxLayout>

            <View
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_1sdp"
                android:layout_marginBottom="@dimen/_8sdp"
                app:layout_alignSelf="center"
                android:background="#999999" />

            <TextView
                android:id="@+id/estab_page_rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4.00"
                android:textColor="@color/colorLogo"
                android:textStyle="bold"
                android:textSize="@dimen/_14sdp"
                app:layout_alignSelf="center"/>

        </com.google.android.flexbox.FlexboxLayout>

        <com.google.android.flexbox.FlexboxLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:flexDirection="column">

            <com.google.android.flexbox.FlexboxLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:flexDirection="row"
                app:justifyContent="space_between"
                android:layout_marginTop="@dimen/_4sdp">

                <TextView
                    android:id="@+id/estab_page_category"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cozinha Portuguesa"
                    android:textStyle="bold"
                    android:textSize="@dimen/_10sdp"
                    app:layout_alignSelf="flex_start"/>

                <TextView
                    android:id="@+id/estab_page_avg_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10€"
                    android:textStyle="normal"
                    android:textSize="@dimen/_8sdp"
                    app:layout_alignSelf="flex_end"/>

            </com.google.android.flexbox.FlexboxLayout>

            <TextView
                android:id="@+id/estab_page_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rua Mouzinho da Silveira"
                android:textStyle="normal"
                app:layout_alignSelf="flex_start"
                android:layout_marginTop="@dimen/_4sdp"/>

            <com.google.android.flexbox.FlexboxLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:justifyContent="space_between"
                app:flexDirection="row"
                android:layout_marginTop="@dimen/_4sdp">

                <TextView
                    android:id="@+id/estab_page_contact"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="223456789"
                    android:textStyle="normal"
                    android:textSize="@dimen/_10sdp"/>

                <com.google.android.flexbox.FlexboxLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:justifyContent="flex_end">

                    <TextView
                        android:id="@+id/estab_zone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Baixa"
                        android:textStyle="normal"
                        android:textSize="@dimen/_10sdp"
                        android:layout_marginEnd="@dimen/_4sdp" />

                    <View
                        android:layout_width="@dimen/_1sdp"
                        android:layout_height="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_2sdp"
                        app:layout_alignSelf="center"
                        android:background="#999999" />

                    <TextView
                        android:id="@+id/estab_city"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Porto"
                        android:textStyle="normal"
                        android:textSize="@dimen/_10sdp"
                        android:layout_marginStart="@dimen/_4sdp" />

                </com.google.android.flexbox.FlexboxLayout>

            </com.google.android.flexbox.FlexboxLayout>

            <TextView
                android:id="@+id/estab_page_schedule1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_4sdp"
                android:text="Horário 1"
                android:textStyle="normal"
                android:textSize="@dimen/_10sdp"/>

            <TextView
                android:id="@+id/estab_page_schedule2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_4sdp"
                android:text="Horário 2"
                android:textStyle="normal"
                android:textSize="@dimen/_10sdp"/>

        </com.google.android.flexbox.FlexboxLayout>

        <com.google.android.flexbox.FlexboxLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:flexDirection="column"
            app:justifyContent="space_around">

            <!-- TODO Meter ou tirar informações (wifi, esplanada...) -->

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:text="Informações"
                android:textStyle="bold"
                android:textSize="@dimen/_15sdp"
                android:textColor="@color/colorLogo"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ListView
                    android:id="@+id/list_infos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                </ListView>

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:text="Menu"
                android:textStyle="bold"
                android:textSize="@dimen/_15sdp"
                android:textColor="@color/colorLogo"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ListView
                    android:id="@+id/list_menu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                </ListView>

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:text="Opiniões"
                android:textStyle="bold"
                android:textSize="@dimen/_15sdp"
                android:textColor="@color/colorLogo"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ListView
                    android:id="@+id/list_comments"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                </ListView>

            </LinearLayout>

        </com.google.android.flexbox.FlexboxLayout>

    </com.google.android.flexbox.FlexboxLayout>

</RelativeLayout>
