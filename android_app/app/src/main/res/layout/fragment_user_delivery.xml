<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="@dimen/_60sdp"
    android:layout_marginLeft="@dimen/_8sdp"
    android:layout_marginRight="@dimen/_8sdp"
    android:layout_marginTop="@dimen/_60sdp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <com.google.android.flexbox.FlexboxLayout
            android:id="@+id/choice1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:flexDirection="column"
            app:justifyContent="space_between">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/colorLogo"
                android:text="@string/request1"
                android:textColor="#fff"
                android:textSize="@dimen/_8sdp"
                android:padding="@dimen/_2sdp"
                android:layout_marginTop="@dimen/_5sdp"/>

            <Spinner
                android:id="@+id/category_choice1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </Spinner>

            <Spinner
                android:id="@+id/estab_choice1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </Spinner>

            <Spinner
                android:id="@+id/menu_choice1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </Spinner>

            <Spinner
                android:id="@+id/quantity_choice1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:entries="@array/meal_quantities">
            </Spinner>

            <com.google.android.flexbox.FlexboxLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:flexDirection="row"
                app:justifyContent="space_between">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/cost"
                    android:textStyle="bold"
                    android:textSize="@dimen/_8sdp"/>

                <TextView
                    android:id="@+id/costOfTheRequest1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_8sdp"
                    android:text="Cenas"
                    android:layout_marginRight="@dimen/_8sdp"
                    android:layout_marginEnd="@dimen/_8sdp" />

            </com.google.android.flexbox.FlexboxLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/colorLogo"
                android:text="@string/request2"
                android:textColor="#fff"
                android:textSize="@dimen/_8sdp"
                android:padding="@dimen/_2sdp"
                android:layout_marginTop="@dimen/_5sdp"/>

            <Spinner
                android:id="@+id/category_choice2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </Spinner>

            <Spinner
                android:id="@+id/estab_choice2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </Spinner>

            <Spinner
                android:id="@+id/menu_choice2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </Spinner>

            <Spinner
                android:id="@+id/quantity_choice2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:entries="@array/meal_quantities">

            </Spinner>


            <com.google.android.flexbox.FlexboxLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:flexDirection="row"
                app:justifyContent="space_between">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/cost"
                    android:textStyle="bold"
                    android:textSize="@dimen/_8sdp"/>

                <TextView
                    android:id="@+id/costOfTheRequest2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_8sdp"
                    android:text="Cenas"
                    android:layout_marginRight="@dimen/_8sdp"
                    android:layout_marginEnd="@dimen/_8sdp" />

            </com.google.android.flexbox.FlexboxLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/colorLogo"
                android:text="@string/request3"
                android:textColor="#fff"
                android:textSize="@dimen/_8sdp"
                android:padding="@dimen/_2sdp"
                android:layout_marginTop="@dimen/_5sdp"/>

            <Spinner
                android:id="@+id/category_choice3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </Spinner>

            <Spinner
                android:id="@+id/estab_choice3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </Spinner>

            <Spinner
                android:id="@+id/menu_choice3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </Spinner>

            <Spinner
                android:id="@+id/quantity_choice3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:entries="@array/meal_quantities">

            </Spinner>


            <com.google.android.flexbox.FlexboxLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:flexDirection="row"
                app:justifyContent="space_between">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/cost"
                    android:textStyle="bold"
                    android:textSize="@dimen/_8sdp"/>

                <TextView
                    android:id="@+id/costOfTheRequest3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_8sdp"
                    android:text="Cenas"
                    android:layout_marginRight="@dimen/_8sdp"
                    android:layout_marginEnd="@dimen/_8sdp" />

            </com.google.android.flexbox.FlexboxLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/colorLogo"
                android:text="@string/request4"
                android:textColor="#fff"
                android:textSize="@dimen/_8sdp"
                android:padding="@dimen/_2sdp"
                android:layout_marginTop="@dimen/_5sdp"/>


            <Spinner
                android:id="@+id/category_choice4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </Spinner>

            <Spinner
                android:id="@+id/estab_choice4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </Spinner>

            <Spinner
                android:id="@+id/menu_choice4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </Spinner>

            <Spinner
                android:id="@+id/quantity_choice4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:entries="@array/meal_quantities">

            </Spinner>


            <com.google.android.flexbox.FlexboxLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:flexDirection="row"
                app:justifyContent="space_between">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/cost"
                    android:textStyle="bold"
                    android:textSize="@dimen/_8sdp"/>

                <TextView
                    android:id="@+id/costOfTheRequest4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_8sdp"
                    android:text="Cenas"
                    android:layout_marginRight="@dimen/_8sdp"
                    android:layout_marginEnd="@dimen/_8sdp" />

            </com.google.android.flexbox.FlexboxLayout>

            <com.google.android.flexbox.FlexboxLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:alignItems="flex_end"
                app:justifyContent="space_between">

                <Button
                    android:id="@+id/end_delivery4"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_15sdp"
                    android:background="@color/colorLogo"
                    android:text="@string/end_delivery"
                    android:textColor="#fff"
                    android:textSize="@dimen/_8sdp"
                    android:layout_marginTop="@dimen/_10sdp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/total_cost"
                    android:textStyle="bold"
                    android:textSize="@dimen/_10sdp"
                    android:gravity="end" />

                <TextView
                    android:id="@+id/total_cost"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_10sdp" />


            </com.google.android.flexbox.FlexboxLayout>


        </com.google.android.flexbox.FlexboxLayout>

    </LinearLayout>


</ScrollView>