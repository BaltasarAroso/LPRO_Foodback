<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/_8sdp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <com.google.android.flexbox.FlexboxLayout
            android:id="@+id/choice1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:flexDirection="column"
            app:justifyContent="space_between">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/colorLogo"
                android:text="@string/request1"
                android:textColor="#fff"
                android:textSize="@dimen/_8sdp"
                android:padding="@dimen/_2sdp"
                android:layout_marginTop="@dimen/_10sdp"/>

            <Spinner
                android:id="@+id/category_choice1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </Spinner>

            <Spinner
                android:id="@+id/estab_choice1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </Spinner>

            <Spinner
                android:id="@+id/menu_choice1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </Spinner>

            <Spinner
                android:id="@+id/quantity_choice1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </Spinner>



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/colorLogo"
                android:text="@string/request2"
                android:textColor="#fff"
                android:textSize="@dimen/_8sdp"
                android:padding="@dimen/_2sdp"
                android:layout_marginTop="@dimen/_10sdp"/>

            <Spinner
                android:id="@+id/category_choice2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </Spinner>

            <Spinner
                android:id="@+id/estab_choice2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </Spinner>

            <Spinner
                android:id="@+id/menu_choice2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </Spinner>

            <Spinner
                android:id="@+id/quantity_choice2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </Spinner>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/colorLogo"
                android:text="@string/request3"
                android:textColor="#fff"
                android:textSize="@dimen/_8sdp"
                android:padding="@dimen/_2sdp"
                android:layout_marginTop="@dimen/_10sdp"/>

            <Spinner
                android:id="@+id/category_choice3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </Spinner>

            <Spinner
                android:id="@+id/estab_choice3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </Spinner>

            <Spinner
                android:id="@+id/menu_choice3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </Spinner>

            <Spinner
                android:id="@+id/quantity_choice3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </Spinner>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/colorLogo"
                android:text="@string/request4"
                android:textColor="#fff"
                android:textSize="@dimen/_8sdp"
                android:padding="@dimen/_2sdp"
                android:layout_marginTop="@dimen/_10sdp"/>


            <Spinner
                android:id="@+id/category_choice4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </Spinner>

            <Spinner
                android:id="@+id/estab_choice4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </Spinner>

            <Spinner
                android:id="@+id/menu_choice4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </Spinner>

            <Spinner
                android:id="@+id/quantity_choice4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </Spinner>

            <Button
                android:id="@+id/end_delivery4"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_15sdp"
                android:background="@color/colorLogo"
                android:text="@string/end_delivery"
                android:textColor="#fff"
                android:textSize="@dimen/_8sdp"
                android:layout_marginTop="@dimen/_10sdp" />

        </com.google.android.flexbox.FlexboxLayout>

    </LinearLayout>


</RelativeLayout>