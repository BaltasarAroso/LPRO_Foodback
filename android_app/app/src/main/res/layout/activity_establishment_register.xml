<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.foodback.foodback.EstablishmentRegister">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:contentDescription="@string/logo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.075"
        app:srcCompat="@drawable/foodback_logo" />

    <EditText
        android:id="@+id/name"
        android:layout_width="334dp"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:hint="Nome de Estabelecimento"
        tools:layout_editor_absoluteX="38dp"
        tools:layout_editor_absoluteY="137dp" />

    <Spinner
        android:id="@+id/category"
        android:layout_width="333dp"
        android:layout_height="41dp"
        android:prompt="Categoria"
        tools:layout_editor_absoluteX="39dp"
        tools:layout_editor_absoluteY="195dp" />


    <EditText
        android:id="@+id/address"
        android:layout_width="334dp"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:hint="Morada"
        tools:layout_editor_absoluteX="38dp"
        tools:layout_editor_absoluteY="244dp" />

    <EditText
        android:id="@+id/email"
        android:layout_width="334dp"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:hint="Email"
        tools:layout_editor_absoluteX="38dp"
        tools:layout_editor_absoluteY="296dp" />

    <EditText
        android:id="@+id/contact"
        android:layout_width="334dp"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:hint="Contacto"
        tools:layout_editor_absoluteX="38dp"
        tools:layout_editor_absoluteY="341dp" />

    <EditText
        android:id="@+id/username"
        android:layout_width="334dp"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:hint="Username"
        tools:layout_editor_absoluteX="38dp"
        tools:layout_editor_absoluteY="386dp" />

    <EditText
        android:id="@+id/password"
        android:layout_width="334dp"
        android:layout_height="wrap_content"
        android:hint="Password"
        android:inputType="text"
        tools:layout_editor_absoluteX="38dp"
        tools:layout_editor_absoluteY="431dp" />


    <Button
        android:id="@+id/button"
        android:layout_width="185dp"
        android:layout_height="32dp"
        android:background="#f16521"
        android:text="Registar Estabelecimento"
        android:textSize="12sp"
        android:textColor="#fff"
        tools:layout_editor_absoluteX="113dp"
        tools:layout_editor_absoluteY="555dp" />

</android.support.constraint.ConstraintLayout>
