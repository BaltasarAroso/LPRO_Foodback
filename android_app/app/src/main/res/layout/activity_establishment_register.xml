<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/_10sdp"
    tools:context="com.foodback.foodback.activity.EstablishmentRegister">


    <com.google.android.flexbox.FlexboxLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:alignItems="center"
        app:flexDirection="column"
        app:justifyContent="center"
        >

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="@dimen/_200sdp"
            android:layout_height="@dimen/_70sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:contentDescription="@string/logo"
            app:layout_alignSelf="center"
            app:srcCompat="@drawable/foodback_logo" />

        <EditText
            android:id="@+id/name"
            android:layout_width="@dimen/_250sdp"
            android:layout_height="@dimen/_60sdp"
            android:hint="@string/establishment_name"
            android:inputType="text"
            android:textSize="@dimen/_10sdp" />

        <Spinner
            android:id="@+id/category"
            android:layout_width="@dimen/_250sdp"
            android:layout_height="@dimen/_60sdp"
            android:entries="@array/categories"
            android:prompt="@string/category"
            android:spinnerMode="dialog"
            android:textSize="@dimen/_10sdp" />

        <EditText
            android:id="@+id/address"
            android:layout_width="@dimen/_250sdp"
            android:layout_height="@dimen/_60sdp"
            android:hint="@string/address"
            android:inputType="text"
            android:textSize="@dimen/_10sdp" />

        <EditText
            android:id="@+id/email"
            android:layout_width="@dimen/_250sdp"
            android:layout_height="@dimen/_60sdp"
            android:hint="@string/e_mail"
            android:inputType="textEmailAddress"
            android:textSize="@dimen/_10sdp" />

        <EditText
            android:id="@+id/contact"
            android:layout_width="@dimen/_250sdp"
            android:layout_height="@dimen/_60sdp"
            android:hint="@string/contact"
            android:inputType="text"
            android:textSize="@dimen/_10sdp" />

        <EditText
            android:id="@+id/username"
            android:layout_width="@dimen/_250sdp"
            android:layout_height="@dimen/_60sdp"
            android:hint="@string/username"
            android:inputType="text"
            android:textSize="@dimen/_10sdp" />

        <EditText
            android:id="@+id/password"
            android:layout_width="@dimen/_250sdp"
            android:layout_height="@dimen/_60sdp"
            android:hint="@string/password"
            android:inputType="textPassword"
            android:textSize="@dimen/_10sdp" />


        <Button
            android:id="@+id/buttonRegisterEstab"
            android:layout_width="@dimen/_150sdp"
            android:layout_height="@dimen/_50sdp"
            android:layout_marginVertical="@dimen/_20sdp"
            android:background="#f16521"
            android:text="@string/register_establishment"
            android:textColor="#fff"
            android:textSize="@dimen/_8sdp" />

    </com.google.android.flexbox.FlexboxLayout>

</android.support.constraint.ConstraintLayout>
