<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.foodback.foodback.fragment.Reports"
    android:orientation="vertical"
    android:layout_margin="@dimen/_8sdp"
    android:id="@+id/tab_reports">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_200sdp"
        android:fillViewport="true">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/reports_users"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorLogo"
                android:textStyle="bold"
                android:text="@string/reports_users"
                android:layout_marginBottom="@dimen/_10sdp" />

            <ListView
                android:id="@+id/list_reports_users"
                android:layout_below="@+id/reports_users"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </ListView>

        </RelativeLayout>

    </ScrollView>

    <TextView
        android:id="@+id/reports_estabs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorLogo"
        android:text="@string/reports_estabs"
        android:textStyle="bold"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_10sdp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <ListView
            android:id="@+id/list_reports_estabs"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_190sdp">

        </ListView>

    </ScrollView>

</LinearLayout>
